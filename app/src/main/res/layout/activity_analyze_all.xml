<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baosight.brightfish.AnalyzeAllActivity">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/time_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/standard_time"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/time_standard"
                android:backgroundTint="@color/colorPur"
                android:checked="true"
                android:button="@null"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准时段"
                />
            <RadioButton
                android:id="@+id/define_time"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/time_standard"
                android:backgroundTint="@color/colorPur"
                android:button="@null"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定义时段"
                />
        </RadioGroup>


        <LinearLayout
            android:id="@+id/define_time_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="起始时间"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:text="截至时间"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/start_time"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    />
                <EditText
                    android:layout_marginLeft="50dp"
                    android:id="@+id/end_time"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算时间"
                />
            <RadioGroup
                android:id="@+id/stock_dater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPur"
                    android:checked="true"
                    android:text="日"
                    />

                <RadioButton
                    android:id="@+id/month"
                    android:layout_marginLeft="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPur"
                    android:text="月"
                    />

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/analyze_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活动"
                />
            <Button
                android:id="@+id/analyze_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据统计"
                />
            <Button
                android:id="@+id/analyze_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="产品分析"
                />
            <Button
                android:id="@+id/analyze_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="供货商分析"
                />
            <Button
                android:id="@+id/analyze_buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="买家分析"
                />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
