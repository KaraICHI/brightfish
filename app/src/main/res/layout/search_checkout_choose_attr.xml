<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/DialogGreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogTitle"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="选择属性"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_drawable"
        android:padding="10dp"
        android:showDividers="end">

        <TextView
            android:id="@+id/choose_attr_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="货品" />

        <TextView
            android:id="@+id/choose_attr_supplier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="供应商" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_drawable"
        android:padding="10dp"
        android:showDividers="end">

        <TextView
            android:id="@+id/choose_attr_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="数量" />

        <TextView
            android:id="@+id/choose_attr_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="价格￥" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_drawable"
        android:padding="10dp"
        android:showDividers="end">

        <TextView
            android:id="@+id/choose_attr_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="时间-日期" />

        <TextView
            android:id="@+id/choose_attr_describe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="描述" />
    </LinearLayout>

    <Button
        android:id="@+id/choose_attr_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogItenHeight"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorBlue" />
</LinearLayout>
