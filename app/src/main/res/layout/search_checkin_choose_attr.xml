<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:theme="@style/DialogGreen"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogTitle"
        android:background="@color/colorGreen"
        android:text="选择属性"
        android:textColor="#fff"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:divider="@drawable/divider_drawable"
        android:showDividers="end"
        >
        <TextView
            android:id="@+id/choose_attr_goods"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="货品"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/choose_attr_supplier"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="供应商"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:divider="@drawable/divider_drawable"
        android:showDividers="end"
        >
        <TextView
            android:id="@+id/choose_attr_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="数量"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/choose_attr_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="价格￥"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:divider="@drawable/divider_drawable"
        android:showDividers="end"
        >
        <TextView
            android:id="@+id/choose_attr_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="时间-日期"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/choose_attr_describe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="描述"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/choose_attr_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogItenHeight"
        android:text="取消"
        android:gravity="center"
        android:textColor="@color/colorGreen"
        style="?android:attr/borderlessButtonStyle"
        />
</LinearLayout>
