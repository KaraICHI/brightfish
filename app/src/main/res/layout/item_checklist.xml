<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/chooseItem">
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/chooseName"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/goods_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/chooseSku"/>
        </LinearLayout>
        <Button
            android:id="@+id/checklist_amount"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/checklistBtnwidth"
            android:layout_height="@dimen/checklistBtnHeight" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cutline"
        android:background="@color/colorLightGery"/>
</LinearLayout>