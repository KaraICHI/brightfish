<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogTitle"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="排序属性"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/sort_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textSize="@dimen/dialogContent" />

            <ImageView
                android:id="@+id/sort_arrow_name"
                android:layout_width="@dimen/iconContent"
                android:layout_height="@dimen/iconContent"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_arrow_up_24dp"
                android:backgroundTint="@color/colorBlue"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/cutline"
            android:layout_marginBottom="@dimen/lineMargin"
            android:layout_marginTop="@dimen/lineMargin"
            android:background="@color/colorLightGery" />

        <RelativeLayout
            android:id="@+id/sort_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKU"
                android:textSize="@dimen/dialogContent" />

            <ImageView
                android:id="@+id/sort_arrow_sku"
                android:layout_width="@dimen/iconContent"
                android:layout_height="@dimen/iconContent"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_arrow_up_24dp"
                android:backgroundTint="@color/colorBlue"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/cutline"
            android:layout_marginBottom="@dimen/lineMargin"
            android:layout_marginTop="@dimen/lineMargin"
            android:background="@color/colorLightGery" />

        <RelativeLayout
            android:id="@+id/sort_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间"
                android:textSize="@dimen/dialogContent" />

            <ImageView
                android:id="@+id/sort_arrow_time"
                android:layout_width="@dimen/iconContent"
                android:layout_height="@dimen/iconContent"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_arrow_up_24dp"
                android:backgroundTint="@color/colorBlue"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/cutline"
            android:layout_marginBottom="@dimen/lineMargin"
            android:layout_marginTop="@dimen/lineMargin"
            android:background="@color/colorLightGery" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancleDialog"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/colorBlue" />

            <Button
                android:id="@+id/okDialog"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="@color/colorBlue" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
